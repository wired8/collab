link(rel="stylesheet", type="text/css", href="/stylesheets/chat.css")link(rel="stylesheet", type="text/css", href="/stylesheets/forms.css")link(rel="stylesheet", type="text/css", href="/stylesheets/lobby.css").container  .wrapper    h1 Lobby    ul(class="nav nav-pills")      li(class="active")        a(href="#all", data-toggle="tab") all      li(class="")        a(href="#public", data-toggle="tab") public      li(class="")        a(href="#private", data-toggle="tab") private    .tab-content      .tab-pane(class="active", id="all")              .row-fluid          .span12            p a list of all rooms            .rooms            .rooms-pagination      .tab-pane(id="public")        .row-fluid          .span12            p a list of public rooms            .rooms(class="public")            .rooms-pagination      .tab-pane(id="private")        .row-fluid          .span12            p a list of private rooms             .rooms(class="private")            .rooms-pagination        a(class="btn btn-primary", data-toggle="modal", href="#createroom") Create a room                .footer-wrapper    .modal(class="hide fade in", role="dialog", id="createroom")      form(method='post', id='newroom-form', action='/newroom')         .modal-header          button(type="button", class="close", data-dismiss="modal", aria-hidden="true") ×          h3 Create a new room        .modal-body          .control-group            label(class='control-label'              for='roomname') Room name:            .controls              input.required(class="biginput", name="roomname", id="roomname", size=100)            .control-group              label(class='control-label'              for='roomsubject') Subject:            .controls              input.required(class="biginput", name="roomsubject", id="roomsubject", size=100)              .control-group                label(class='control-label'                for='create_room_public') Access:              .controls(class="newroom")                input(type="radio", autocomplete="off", id="create_room_public", checked="checked", value="public", name="create_room_access")                label(class='control-label'                for='create_room_public') Public                p A public room where anyone can access.                input(type="radio", autocomplete="off", id="create_room_private", value="private", name="create_room_access") Private                label(class='control-label'                for='create_room_private') Private                p Restricted access, invite only.         .modal-footer           button(type="submit"            class="btn btn-primary") Create room           a(class="btn", data-dismiss="modal", href="#") Cancel                .modal(class="hide fade in", role="dialog", id="deleteroom")      form(method='post', id='deleteroom-form', action='/deleteroom')         .modal-header          button(type="button", class="close", data-dismiss="modal", aria-hidden="true") ×          h3 Delete room        .modal-body          .control-group            label(class='control-label') Are you sure you wish to delete               span(id='roomname')              span ?            .controls              input(type="hidden", id="roomid", name="roomid")         .modal-footer           button(type="submit"            class="btn btn-primary") Delete room           a(class="btn", data-dismiss="modal", href="#") Cancel            .modal(class="hide fade in", role="dialog", id="renameroom")      form(method='post', id='deleteroom-form', action='/renameroom')         .modal-header          button(type="button", class="close", data-dismiss="modal", aria-hidden="true") ×          h3 Rename room        .modal-body          .control-group            label(class='control-label') Rename room               span(id='roomname')              span ?            .controls              input(type="hidden", id="roomid", name="roomid")              input.required(class="biginput", name="roomname", id="newroomname", size=100)         .modal-footer           button(type="submit"            class="btn btn-primary") Rename room           a(class="btn", data-dismiss="modal", href="#") Cancel - scripts.push('rooms.js'); - scripts.push('newroom.js');   script(type='text/javascript', src='/nowjs/now.js')