link(rel="stylesheet", type="text/css", href="http://lab.wired8.com/collab/public/stylesheets/chat.css")
.container
  .wrapper
    .row-fluid
      .span9
        .messages-container
          .messages
      .span3
        .users(class="well sidebar-nav")
          ul(id="user-list"
          class="nav nav-list")
            li(class="nav-header")  Users
    .push
  .footer-wrapper
    .row-fluid
      .span9
        .sendbar(class="well")
          table(class="chat")
            tr
              td(class="chat-text")
                textarea(id="text-input")
              td(class="spacer")
                .spacer(class="spacer")
              td(class="send-button")
                input(type="button"
                class="btn-large btn-primary"
                value="Send"
                id="send-button")
    .footer
